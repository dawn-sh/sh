package day0627;

class ObTestA{
	
	//private 붙이는 순간 에러...메서드로 접근해야함
	//private 붙여서 호출
	private int x; //ObTestA oa1=new ObTestA(); 이걸로 호출 불가능
	private static int y; //ObTestA.y 이걸로 호출 불가능
	
	//x에 대한 set get 메서드
	
	
	//x set 메서드
	//void 말고도 올 수 있음
	public void setX(int xx) //=>수정을 목적으로 하기 때문에 인자값 필수
	{
		//this.x=xx;
		x=xx; //private과 이 setX(인자값)의 인자값과 이름이 틀릴때 this생략하여 사용
	}
	
	//x get 메서드 ()안 인자값x
	//void 말고도 올 수 있음
	public void getX()
	{
		System.out.println("x="+this.x);
	}
} 





//////////////////////////////////////////////////////
public class ExObTest_06 {

	public static void main(String[] args) {
		
		/*x는 생성 ..private 붙이는 순간 에러...메서드로 접근해야함
		ObTestA oa1=new ObTestA();
		System.out.println(oa1.x);
		
		//y는 클래스명으로 호출
		System.out.println(ObTestA.y);*/
		
		
		//private변수이므로 메서드 만들어서 호출 가능..변수에 직접 접근안됨
		ObTestA oa1=new ObTestA();
		oa1.setX(20); //->()값 수정
		oa1.getX();

		
	}

}
